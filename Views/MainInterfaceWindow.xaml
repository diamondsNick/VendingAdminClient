<Window x:Class="AdminClient.Views.MainInterfaceWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:AdminClient.Views"
    mc:Ignorable="d"
    Title="Управление автоматами" Height="450" Width="800"
    MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="630*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="62"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.RowSpan="2" Background="#1d2127"></Grid>
        <Button Width="30" HorizontalAlignment="Left" Margin="10,0,0,0" BorderThickness="0" Background="Transparent" Height="30" Grid.Column="0" Grid.Row="0">
            <Image Source="/Resources/burger.png"></Image>  
        </Button>
        <TextBlock x:Name="CurrentPageTitle" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" Height="29" Width="100" FontSize="19" Foreground="White" Text="Главная"/>
        <StackPanel Grid.Row="2" Grid.Column="0" Background="Transparent">
            <Button Height="50" Name="MainWindowButton" Click="MainWindowButton_Click">
                <TextBlock Foreground="White">What the sigma</TextBlock>
            </Button>
        </StackPanel>
        <Border Grid.Column="1" Grid.Row="0" Background="#1d2127" BorderThickness="0" />
        <Grid Grid.Column="1" Grid.Row="1" Background="#d9d9d9"></Grid>
        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="17*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="CompanyNameBox" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Left" Height="29" Width="220" FontSize="24" Foreground="White" Margin="10,0,0,0" Text="ООО Автоматово"/>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="50*"/>
                </Grid.RowDefinitions>
                <Image Grid.Column="0" Name="LanguageImg" Width="30px" Height="30px" Grid.RowSpan="2" Source="{Binding LanguageImageSource}" HorizontalAlignment="Right" VerticalAlignment="Center" />
                <TextBlock Text="Автоматов А. А." Foreground="White" x:Name="UserInfo" Padding="10,0,10,0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Column="1"/>
                <TextBlock Text="Администратор." Foreground="Gray" x:Name="UserRole" Padding="10,0,10,0" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1"/>
                <Button Width="15" Height="15" Grid.Column="2" Grid.RowSpan="2" Name="DropdownButton" Click="DropdownButton_Click" Margin="0,0,10,0" Background="Transparent" BorderThickness="0" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Image Name="MenuPic" Source="/Resources/arrow.png"/>
                </Button>

            </Grid>
        </Grid>
        <Canvas Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right" Margin="0,-10,0,0" Width="170" Height="50" Background="Transparent" VerticalAlignment="Top">
            <StackPanel Name="DropdownPanel"
                        Visibility="Collapsed"
                        Width="170" Height="50"
                        Panel.ZIndex="10"
                        >
                <Button Background="Transparent" BorderThickness="0" Margin="0,7,0,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Width="16" Height="16" Source="/Resources/profile.png" Margin="10,0,5,0"/>
                        <TextBlock Text="Профиль" Foreground="White" VerticalAlignment="Center" Margin="0,0,11,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="LogoutButton" Background="Transparent" Click="LogoutButton_Click" BorderThickness="0" Margin="0,7,0,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Width="16" Height="16" Source="/Resources/power.png" Margin="10,0,5,0"/>
                        <TextBlock Text="Выход" Foreground="White" VerticalAlignment="Center"  Margin="0,0,30,0"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Canvas>
        <Frame Name="MainFrame" Grid.Column="1" Grid.Row="1">
            
        </Frame>
    </Grid>
</Window>
