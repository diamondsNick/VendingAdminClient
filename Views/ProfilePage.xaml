<Page x:Class="AdminClient.Views.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AdminClient.Views"
      mc:Ignorable="d" 
      d:DesignHeight="372" d:DesignWidth="600"
      MinHeight="372" MinWidth="600"
      Title="ProfilePage">

    <Grid Background="#d9d9d9">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="160*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="13"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="74*"/>
        </Grid.RowDefinitions>
        <Border  Grid.Row="1" Background="White" Margin="10,10,10,10" CornerRadius="5" MinWidth="190" Grid.Column="0" BorderThickness="1" BorderBrush="Gray">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="50*"/>
                </Grid.RowDefinitions>
                <Border CornerRadius="5, 5, 0, 0" Background="LightGray" BorderBrush="DarkGray" BorderThickness="0,0,0,1" Grid.Row="0" Grid.ColumnSpan="2">
                    <TextBlock Text="Пользователь" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" />
                </Border>
                <StackPanel Grid.Column="0" Grid.Row="1" Margin="5,5,0,0">
                    <TextBlock FontSize="11">Id пользователя</TextBlock>
                    <TextBlock FontSize="11">ФИО</TextBlock>
                    <TextBlock FontSize="11">Права</TextBlock>
                    <TextBlock FontSize="11">Телефон</TextBlock>
                    <TextBlock FontSize="11">Эл. почта</TextBlock>
                    <TextBlock FontSize="11">В работе с</TextBlock>
                </StackPanel>
                <StackPanel  Grid.Column="1" Grid.Row="1" Margin="0,5,5,0">
                    <TextBlock Name="IDUser" TextAlignment="Right" FontSize="11">110011</TextBlock>
                    <TextBlock Name="UserName" TextAlignment="Right" FontSize="11">Автоматов А.А</TextBlock>
                    <TextBlock Name="UserRole" TextAlignment="Right" FontSize="11">Администратор</TextBlock>
                    <TextBlock Name="UserPhone" TextAlignment="Right" FontSize="11">8(800)350-85-07</TextBlock>
                    <TextBlock Name="UserAdress" TextAlignment="Right" FontSize="11">automatov@yandex.ru</TextBlock>
                    <TextBlock Name="UserRegistration" TextAlignment="Right" FontSize="11">11.05.2018 08:58</TextBlock>
                </StackPanel>
            </Grid>
        </Border>
        <Border  Grid.Row="1" Background="White" Margin="10,10,10,10" CornerRadius="5" MinWidth="190" Grid.Column="1" BorderThickness="1" BorderBrush="Gray">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.6*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="50*"/>
                </Grid.RowDefinitions>
                <Border CornerRadius="5, 5, 0, 0" Background="LightGray" BorderBrush="DarkGray" BorderThickness="0,0,0,1" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
                    <TextBlock Text="Компания" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" />
                </Border>
                <StackPanel Grid.Column="0" Grid.Row="1" Margin="5,5,20,0" Grid.ColumnSpan="2">
                    <TextBlock FontSize="11">Id компании</TextBlock>
                    <TextBlock FontSize="11">Название</TextBlock>
                    <TextBlock FontSize="11">Баланс</TextBlock>
                    <TextBlock FontSize="11">Адрес</TextBlock>
                    <TextBlock FontSize="11">Контакты</TextBlock>
                    <TextBlock FontSize="11">В работе с</TextBlock>
                </StackPanel>
                <StackPanel Grid.Row="1" Margin="74,5,5,0" Grid.ColumnSpan="3">
                    <TextBlock Name="IDCompany" TextAlignment="Right" FontSize="11">Не указано</TextBlock>
                    <TextBlock Name="CompanyName" TextAlignment="Right" FontSize="11">Не указано</TextBlock>
                    <TextBlock Name="CompanyBalance" TextAlignment="Right" FontSize="11">Не указано</TextBlock>
                    <TextBlock Name="CompanyAdress" TextAlignment="Right" FontSize="11">Не указано</TextBlock>
                    <TextBlock Name="CompanyContacts" TextAlignment="Right" FontSize="11">Не указано</TextBlock>
                    <TextBlock Name="CompanyRegistration" TextAlignment="Right" FontSize="11">Не указано</TextBlock>
                </StackPanel>
            </Grid>
        </Border>


    </Grid>
</Page>
