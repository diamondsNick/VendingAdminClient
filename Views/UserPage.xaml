<Page x:Class="AdminClient.Views.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AdminClient.Views"
      mc:Ignorable="d" 
        MinHeight="600" MinWidth="900"
    Title="UserPage">


    <Grid Background="#d9d9d9">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="131*"/>
            <ColumnDefinition Width="640*"/>
            <ColumnDefinition Width="129*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="383*"/>
            <RowDefinition Height="190*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Column="1" Grid.Row="1" Margin="0,24,0,93">
            <Border Grid.Column="0" Background="White" CornerRadius="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="69"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Background="#f6f6f6" BorderBrush="DeepSkyBlue" BorderThickness="0,2,0,0.5"
                     CornerRadius="5,5,0,0" Grid.ColumnSpan="3">
                        <Grid>

                            <TextBlock x:Name="PageName" Margin="5,0,5,0" VerticalAlignment="Center" FontSize="25" Foreground="DeepSkyBlue" Text="Редактирование пользователя"></TextBlock>
                        </Grid>
                    </Border>
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="7*"/>
                            <RowDefinition Height="13*"/>
                        </Grid.RowDefinitions>
                        <TextBlock VerticalAlignment="Bottom" Margin="10,0,0,0">ФИО*</TextBlock>
                        <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Margin="10"></TextBox>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="7*"/>
                            <RowDefinition Height="13*"/>
                        </Grid.RowDefinitions>
                        <TextBlock VerticalAlignment="Bottom">Права*</TextBlock>
                        <ComboBox x:Name="RoleComboBox"
                          SelectionChanged="RoleComboBox_SelectionChanged"
                          ItemsSource="{Binding Roles}"
                          DisplayMemberPath="Name"
                          SelectedValuePath="ID"
                          Grid.Row="1"
                          Margin="10"
                          SelectedValue="{Binding RoleID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>


                    <Grid Grid.Row="2" Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="7*"/>
                            <RowDefinition Height="13*"/>
                        </Grid.RowDefinitions>
                        <TextBlock VerticalAlignment="Bottom" Margin="10,0,0,0">Телефон*</TextBlock>
                        <TextBox x:Name="PhoneBox" Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Margin="10"></TextBox>
                    </Grid>
                    <Grid Grid.Row="2" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="7*"/>
                            <RowDefinition Height="13*"/>
                        </Grid.RowDefinitions>
                        <TextBlock VerticalAlignment="Bottom" Margin="10,0,0,0">Email*</TextBlock>
                        <TextBox x:Name="EmailBox" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Margin="10"></TextBox>
                    </Grid>
                    <Grid Grid.Row="3" Grid.Column="0"
                          Name="LoginGrid"
                          Visibility="Hidden">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="7*"/>
                            <RowDefinition Height="13*"/>
                        </Grid.RowDefinitions>
                        <TextBlock VerticalAlignment="Bottom" Margin="10,0,0,0">Логин*</TextBlock>
                        <TextBox x:Name="LoginBox" Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Margin="10"></TextBox>
                    </Grid>
                    <Grid Grid.Row="3" Grid.Column="1"
                          Name="PasswordGrid"
                          Visibility="Hidden">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="7*"/>
                            <RowDefinition Height="13*"/>
                        </Grid.RowDefinitions>
                        <TextBlock VerticalAlignment="Bottom" Margin="10,0,0,0">Пароль*</TextBlock>
                        <TextBox x:Name="PasswordBox" Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Margin="10"></TextBox>
                    </Grid>

                    <Border Grid.Row="5" Background="#f6f6f6" Grid.ColumnSpan="3">
                        <Grid>
                            <Border HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" Width="80" Height="35" CornerRadius="5" Background="DeepSkyBlue">
                                <Button Click="Button_Click" Foreground="White">Сохранить</Button>
                            </Border>
                            <Border HorizontalAlignment="Left" VerticalAlignment="Center" Margin="120,0,0,0" Width="80" Height="35" CornerRadius="5" BorderThickness="1" BorderBrush="Gray" Background="White">
                                <Button Foreground="Black" Click="Cancel_Click">Отменить</Button>
                            </Border>
                        </Grid>
                    </Border>

                </Grid>
            </Border>

        </Grid>
    </Grid>

</Page>
